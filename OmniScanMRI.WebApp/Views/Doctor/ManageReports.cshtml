@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Manage Patient Reports";
}

<link rel="stylesheet" href="~/Content/bootstrap.min.css">

<div class="container mt-5">
    <h2>Manage Patient Reports</h2>

    <div class="row">
        <div class="col-md-12">
            <div class="card mt-4">
                <div class="card-header">
                    Report Actions
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <a href="@Url.Action("UploadScan", "Doctor")" class="btn btn-primary">Upload Patient Scan Report</a>
                        </li>
                        <li class="list-group-item">
                            <a href="@Url.Action("ViewReport", "Doctor")" class="btn btn-primary">View Patient Report</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
