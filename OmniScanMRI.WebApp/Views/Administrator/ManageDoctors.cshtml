@using OmniScanMRI.WebApp.Models
@model IEnumerable<Doctors>

@{
    ViewBag.Title = "Manage Doctors";
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">

<h2>Manage Doctors</h2>

<table id="doctorsTab" class="display">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Specialization</th>
            <th>License Number</th>
            <th>Contact Number</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.FirstName</td>
                <td>@doctor.LastName</td>
                <td>@doctor.Specialization</td>
                <td>@doctor.LicenseNumber</td>
                <td>@doctor.ContactNumber</td>
                <td>@doctor.Email</td>
                <td>
                    @Html.ActionLink("View", "ViewDoctor", "Administrator", new { id = doctor.DoctorID }, null) |
                    @Html.ActionLink("Edit", "EditDoctor", "Administrator", new { id = doctor.DoctorID }, null) |
                    @Html.ActionLink("Delete", "DeleteDoctor", "Administrator", new { id = doctor.DoctorID }, new { onclick = "return confirm('Are you sure you want to delete this doctor?');" })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function () {
            jQuery('#doctorsTab').DataTable({
                "pageLength": 10,
                "ordering": true,
                "searching": true,
                "order": [[4, 'desc']]
            });
        });
    </script>
}
