@using OmniScanMRI.WebApp.Models
@model  Appointments

@{
    ViewBag.Title = "Cancel Appointment";
}

<h2>Are you sure you want to cancel this appointment?</h2>

<div>
    <h4>Appointment Details:</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Patient.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Patient.FirstName) @Html.DisplayFor(model => model.Patient.LastName)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Cancel Appointment" class="btn btn-danger" />
            @Html.ActionLink("Go Back", "ManageAppointmentsByAdministrator", null, new { @class = "btn btn-default" })
        </div>
    }
    }
    </div>
