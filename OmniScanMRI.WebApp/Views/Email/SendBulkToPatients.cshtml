@using OmniScanMRI.WebApp.Models
@model SendBulkEmailModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Send Bulk Emails to Patients";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("SendBulkEmailToPatients", "Email", FormMethod.Post))
{
    foreach (var email in Model.ToEmails)
    {
        <input type="hidden" name="ToEmails" value="@email" />
    }
    <div class="form-group">
        <label for="Subject">Subject:</label>
        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label for="Content">Message Content:</label>
        @Html.TextAreaFor(m => m.Content, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label for="CcEmail">Cc:</label>
        @Html.TextAreaFor(m => m.CcEmail, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <input type="submit" value="Send Bulk Email" class="btn btn-primary" />
    </div>
}
