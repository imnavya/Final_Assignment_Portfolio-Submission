@using OmniScanMRI.WebApp.Models
@model SendEmailModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Send Email";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Send", "Email", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label for="ToEmail">To:</label>
        @Html.TextBoxFor(m => m.ToEmail, new { @class = "form-control", type = "email", required = "required" })
    </div>

    <div class="form-group">
        <label for="Subject">Subject:</label>
        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label for="Content">Content:</label>
        @Html.TextAreaFor(m => m.Content, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label for="Content">Content:</label>
        @Html.TextAreaFor(m => m.CcEmail, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FileAttachment, "Attachment")
        @Html.TextBoxFor(model => model.FileAttachment, new { type = "file" })
    </div>
    <div class="form-group">
        <input type="submit" value="Send Email" class="btn btn-primary" />
    </div>
}
